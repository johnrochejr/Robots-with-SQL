<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>User Profile</title>
    <link rel="stylesheet" href="/screen.css">
  </head>
  <body>
    <div class="user">
      <figure>
        <img src="{{imageURL}}" alt="Portrait">
      </figure>
      <div class="contact">
        <h1>{{username}}</h1>
        <p>
          {{city}},
          {{#job}}
          {{job}}, {{company}}
          {{/job}}
          {{^job}}
          <span class="funemployed">Available for Hire</span>
          {{/job}}
        </p>
        <p> {{email}}</p>
      </div>
    </div>
      <div class="details">
        <dl>
          {{#university}}
          <dt>Education</dt>
          <dd>{{university}}</dd>
          {{/university}}
        </dl>
      </div>
    </div>
  </body>
</html>
